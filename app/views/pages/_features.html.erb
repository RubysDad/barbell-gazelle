<section id="features" class="features text-center">
  <div class="container">
    <div class="row">
      <div class="col-lg-10 col-lg-offset-1">
        <div class="section-heading">
          <h2>I'm making progress!</h2>
            <hr class="small">
            <div class="row">
              <div class="col-sm-12 col-md-4">
                <div class="thumbnail">
                  <%= @instagram.each do |instagram| %>
                    <%= image_tag instagram.images.standard_resolution.url %>
                    <%= video_tag instagram.images.standard_resolution.url %>
                  <% end %>
                  <p class="text-muted">New improvements everyday!</p>
                </div>
              </div>
            </div>
          <hr>
        </div>
      </div>
    </div>
  </div>
</section>
